<div class="jumbotron">
  <h1><span>New Event</span></h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
        <%= form_for @event do |f| %>
    <div class="form-group">
      <%= f.label :name, "Name", class: "control-label" %>
      <%= f.text_field :name, :required => true, class: "form-control", placeholder: "Name" %>
    </div>
    <div class="form-group">
      <%= f.label :description, "Description", class: "control-label" %>
      <%= f.text_area :description, :required => true, class: "form-control", placeholder: "Description" %>
    </div>
    <div class="form-group">
      <%= f.label :place, "Place", class: " control-label" %>
      <%= f.text_field :place, :required => true, class: "form-control", placeholder: "Place" %>
    </div>
    <div class="form-group">
      <%= f.label :DateTime, "Date", class: "control-label" %>
      <%= f.text_field :DateTime, :required => true, class: "form-control", placeholder: "Date" %>
    </div>  
      <%= f.hidden_field :host_id %>
   
    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-default  center-bl form-control" %>
    </div>
  <% end %> 
  </div>
</div>  